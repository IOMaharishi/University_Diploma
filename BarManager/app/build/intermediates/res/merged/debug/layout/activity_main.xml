<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/blue"
    >

    <EditText
        android:textColor="@color/screen_background_black"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:inputType="numberPassword"
        android:maxLength="5"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:elegantTextHeight="true"
        android:background="@drawable/fillcolor"
        />

    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Five"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="@string/five"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_effect"
            />
            <!--style="?android:attr/borderlessButtonStyle"-->

            <!--style="?android:attr/accessibilityFeedbackType"/>-->
        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Six"
            android:text="@string/six"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/Five"
            android:layout_marginLeft="10dp"

            />
        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Four"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/Five"
            android:layout_marginRight="10dp"
            android:text="@string/four"
            android:textAlignment="center"
            />

        <View

            android:id="@+id/hor_separate"
            android:layout_above="@id/Five"
            android:layout_width="match_parent"
            android:layout_alignRight="@id/Six"
            android:layout_alignLeft="@id/Four"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:layout_height="2px" />

        <View
            android:id="@+id/hor_separate2"
            android:layout_below="@id/Five"
            android:layout_width="match_parent"
            android:layout_alignRight="@id/Six"
            android:layout_alignLeft="@id/Four"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_height="2px" />
        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Eight"
            android:text="@string/eight"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/hor_separate2"
            android:layout_width="100dp"
            android:layout_height="75dp"

            />
        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Zero"
            android:text="@string/zero"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Eight"
            android:layout_marginTop="10dp"
            />
        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Two"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/hor_separate"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/two"
            android:textAlignment="center"
            />

        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/One"
            android:text="@string/one"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_toLeftOf="@id/Two"
            android:layout_above="@id/Four"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            />

        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Three"
            android:text="@string/three"
            android:textAlignment="center"
            android:layout_toRightOf="@id/Two"
            android:layout_above="@id/Six"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="75dp"
            />

        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Seven"
            android:text="@string/seven"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_below="@id/Four"
            android:layout_toLeftOf="@id/Eight"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Nine"
            android:text="@string/nine"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_below="@id/Six"
            android:layout_toRightOf="@id/Eight"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/Eight"
            android:layout_alignRight="@id/Nine"
            android:layout_alignLeft="@id/Four"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            />
        <Button
            android:background="@drawable/button_effect"
            android:textColor="@color/white"
            android:id="@+id/Ok"
            android:text="@string/ok"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_below="@id/Seven"
            android:layout_toLeftOf="@id/Zero"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_toRightOf="@id/Five"
            android:layout_alignTop="@id/Two"
            android:layout_alignBottom="@id/Zero"
            android:layout_width="2px"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@color/white"/>

        <View
            android:layout_toLeftOf="@id/Five"
            android:layout_alignTop="@id/Two"
            android:layout_alignBottom="@id/Zero"
            android:layout_width="2px"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@color/white"/>
        <ImageButton
            android:textColor="@color/white"
            android:background="@drawable/button_effect"
            android:id="@+id/delete_btn"
            android:layout_below="@id/Nine"
            android:layout_toRightOf="@id/Zero"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/button_delete_gray"
            android:layout_width="100dp"
            android:layout_height="75dp" />

    </RelativeLayout>
</LinearLayout>
